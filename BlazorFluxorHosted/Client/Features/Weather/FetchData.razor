@page "/fetchdata"

<PageTitle>Weather forecast</PageTitle>
<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from the server.</p>

<p>IsLoading: @WeatherState.Value.IsLoading</p>
<p>IsInitialized: @WeatherState.Value.IsInitialized</p>

@if (WeatherState.Value.IsLoading)
{
    <img src="/loading-loading-symbol.gif" />
}

@if (!IsLoading && Forecasts is not null)
{
    <Forecasts WeatherForecasts="Forecasts" />
    <br />
    <button class="btn btn-outline-info" @onclick="LoadForecasts">Refresh Forecasts</button>
}